<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:padding="2dp">


        <LinearLayout
            android:id="@+id/irboton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cheps">


            <ImageView
                android:id="@+id/img_foto"
                android:layout_width="57dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop">

            </ImageView>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="57dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/placaVehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Placa del vehicuilo"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nameConductor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del conductor"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/placaTrailer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placa del trailer"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/estatusVehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="estatus del vehiculo"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>